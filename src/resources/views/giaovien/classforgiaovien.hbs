<header>
    <link rel="stylesheet" href="/css/student.css">
</header>
<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sidebars</title>
        <link rel="stylesheet" href="styles copy.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
            rel="stylesheet" />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,0" />
        <link
            href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
            rel="stylesheet" />
        <script src="https://unpkg.com/akar-icons-fonts"></script>
        <style>
            a{
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <div class="nav-conteiner">
            <div class="user">
                <i class="fa-regular fa-user"></i>
                <p> Xin chào {{user}}</p>
            </div>
        </div>
        <aside class="sidebar">
            <header>
                <button
                    type="button"
                    className="sidebar-burger"
                    onClick="toggleSidebar()">
                    <i class="ai-three-line-horizontal"></i>
                </button>

            </header>
            <ul>
                <li>
                    <a href="/giaovien">
                        <button type="button" onclick="onClick(this)">
                            <i class="fa-solid fa-calendar-days"></i>
                            <p>Thời khóa biểu</p>
                        </button>
                    </a>
                </li>
                <li>
                    <a href="/giaovien/blog/">
                        <button type="button" onclick="onClick(this)">
                            <i class="ai-dashboard"></i>
                            <p>Quản lí Blog</p>
                        </button>
                    </a>
                </li>
                <li>
                    <a href="/giaovien/course">
                        <button type="button" onclick="onClick(this)">
                            <i class="fa-brands fa-discourse"></i>
                            <p>Khóa học</p>
                        </button>
                    </a>
                </li>
                <li>
                    <a href="/giaovien/class">
                        <button type="button" onclick="onClick(this)">
                            <i class="fa-solid fa-landmark"></i>
                            <p>Thông tin lớp học</p>
                        </button>
                    </a>
                </li>
                <li>
                    <a href="/giaovien/score">
                        <button type="button" onclick="onClick(this)">
                            <i class="fa-solid fa-pencil"></i>
                            <p>Điểm thi</p>
                        </button>
                    </a>
                </li>
                <li>
                    <a href="/giaovien/attend">
                        <button type="button" onclick="onClick(this)">
                            <i class="fa-regular fa-calendar"></i>
                            <p>Điểm danh</p>
                        </button>
                    </a>
                </li>
                <li>
                    <a href="/login/logout">
                        <button type="button" onclick="onClick(this)">
                            <i class="ai-lock-on"></i>
                            <p>Đăng xuất</p>
                        </button>
                    </a>
                </li>
            </ul>
        </aside>

        <div id="content">

            <h1>Danh sách lớp học</h1>
            <div class="infStudent">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr class="table-content">
                            <th scope="col">Mã lớp</th>
                            <th scope="col">Tên Lớp</th>
                            <th scope="col">Kỹ năng</th>
                            <th scope="col">Phòng</th>
                            <th scope="col">Ngày bắt đầu học</th>
                            <th scope="col">Số buổi học trên tuần</th>
                            <th scope="col">Giáo viên đảm nhiệm</th>
                            <th scope="col">Giờ học</th>
                            <th scope="col">Số lượng học viên</th>
                            <th scope="col">Chức năng</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each inClass}}
                        <tr class="table-data">
                            <td>{{this.id}}</td>
                            <td>{{this.nameclass}}</td>
                            <td>{{this.skill}}</td>
                            <td>{{this.phong}}</td>
                            <td class="date">{{this.ngayhoc}}</td>
                            <td>3 Buổi/Tuần({{this.buoihoc}})</td>
                            <td>{{this.fullname}}</td>
                            <td>{{this.giohoc}}</td>
                            <td>{{this.total_students}}</td>
                            <td>
                                <a href="/giaovien/information/?id={{this.id}}">
                                    <i class="fa-solid fa-eye"
                                        style="color: #74C0FC;"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <script src="main.js"></script>
    </body>

</html>
