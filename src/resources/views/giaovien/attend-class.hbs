<html>
    <head>
        <link rel="stylesheet" href="/css/styles.css"> <link rel="stylesheet"
            href="/css/scoreID.css">
    </head>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sidebars</title>
        <link rel="stylesheet" href="styles copy.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
            rel="stylesheet" />
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,1,0" />
        <link
            href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
            rel="stylesheet" />
        <script src="https://unpkg.com/akar-icons-fonts"></script>
        <style>
            a{
                text-decoration: none;
            }
        </style>
    </head>
    <body>
        <div class="nav-conteiner">
            <div class="user">
                <i class="fa-regular fa-user"></i>
                <p> Xin chào {{user}}</p>
            </div>
        </div>
        <aside class="sidebar">
                <header>
                    <button
                        type="button"
                        className="sidebar-burger"
                        onClick="toggleSidebar()">
                        <i class="ai-three-line-horizontal"></i>
                    </button>
                    
                </header>
                <ul>
                    <li>
                        <a href="/giaovien">
                            <button type="button" onclick="onClick(this)">
                                <i class="fa-solid fa-calendar-days"></i>
                                <p>Thời khóa biểu</p>
                            </button>
                        </a>
                    </li>
                    <li>
                        <a href="/giaovien/blog/">
                            <button type="button" onclick="onClick(this)">
                                <i class="ai-dashboard"></i>
                                <p>Quản lí Blog</p>
                            </button>
                        </a>
                    </li>
                    <li>
                        <a href="/giaovien/course">
                            <button type="button" onclick="onClick(this)">
                                <i class="fa-brands fa-discourse"></i>
                                <p>Khóa học</p>
                            </button>
                        </a>
                    </li>
                    <li>
                        <a href="/giaovien/class">
                            <button type="button" onclick="onClick(this)">
                                <i class="fa-solid fa-landmark"></i>
                                <p>Thông tin lớp học</p>
                            </button>
                        </a>
                    </li>
                    <li>
                        <a href="/giaovien/score">
                            <button type="button" onclick="onClick(this)">
                                <i class="fa-solid fa-pencil"></i>
                                <p>Điểm thi</p>
                            </button>
                        </a>
                    </li>
                    <li>
                        <a href="/giaovien/attend">
                            <button type="button" onclick="onClick(this)">
                                <i class="fa-regular fa-calendar"></i>
                                <p>Điểm danh</p>
                            </button>
                        </a>
                    </li>
                    <li>
                        <a href="/login/logout">
                            <button type="button" onclick="onClick(this)">
                                <i class="ai-lock-on"></i>
                                <p>Đăng xuất</p>
                            </button>
                        </a>
                    </li>
                </ul>
            </aside>

            <div id="content">
                {{#each results}}
                <div class="class-info">
                    <div class="class-info-row">
                        <div class="class-info-item">
                            <span class="class-info-label">Mã lớp:</span>
                            <span class="class-info-value"
                                id="idClass">{{this.id}}</span>
                        </div>
                        <div class="class-info-item">
                            <span class="class-info-label">Tên lớp:</span>
                            <span
                                class="class-info-value">{{this.nameclass}}</span>
                        </div>
                        <div class="class-info-item">
                            <span class="class-info-label">Kỹ năng:</span>
                            <span class="class-info-value">{{this.skill}}</span>
                        </div>
                    </div>
                    <div class="class-info-row">
                        <div class="class-info-item">
                            <span class="class-info-label">Phòng:</span>
                            <span class="class-info-value">{{this.phong}}</span>
                        </div>
                        <div class="class-info-item">
                            <span class="class-info-label">Ngày bắt đầu
                                học:</span>
                            <span
                                class="class-info-value">{{this.ngayhoc}}</span>
                        </div>
                        <div class="class-info-item">
                            <span class="class-info-label">Số buổi học trên
                                tuần:</span>
                            <span class="class-info-value">3
                                Buổi/Tuần({{this.buoihoc}})</span>
                        </div>
                    </div>
                    <div class="class-info-row">
                        <div class="class-info-item">
                            <span class="class-info-label">Giáo viên đảm
                                nhiệm:</span>
                            <span
                                class="class-info-value">{{this.fullname}}</span>
                        </div>
                        <div class="class-info-item">
                            <span class="class-info-label">Giờ học:</span>
                            <span
                                class="class-info-value">{{this.giohoc}}</span>
                        </div>
                        <div class="class-info-item">
                            <span class="class-info-label">Số lượng học viên
                                trong lớp:</span>
                            <span
                                class="class-info-value">{{this.total_students}}</span>
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="infStudent">
                    {{!-- Danh sách học viên --}}
                    <h1>Danh sách học viên</h1>
                    <div class="infStudent">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr class="table-content">
                                    <th scope="col">Mã học viên</th>
                                    <th scope="col">Tên học viên</th>
                                    <th scope="col">Có mặt</th>
                                    <th scope="col">Vắng không phép</th>
                                    <th scope="col">Vắng có phép</th>
                                    <th scope="col">Điểm danh</th>
                                </tr>
                            </thead>
                            <tbody>
                                <form id="attend-student" method="post">
                                    <div>
                                        <p>Chọn ngày để điểm danh:</p>
                                        <input type="date" name="dateAttend"
                                            id="date-attend">
                                    </div>
                                    {{#each student}}
                                    <tr class="table-data">
                                        <td>{{this.mahv}}
                                            <input type="hidden" name="mahv"
                                                value="{{this.mahv}}">
                                        </td>
                                        <td>{{this.fullname}}</td>
                                        <td>
                                            {{this.present}}
                                        </td>
                                        <td>
                                            {{this.absent}}
                                        </td>
                                        <td>
                                            {{this.permission}}
                                        </td>
                                        <td>
                                            <select class="attendance_status"
                                                name="attendance_status"
                                                required>
                                                <option value="0">Có
                                                    mặt</option>
                                                <option value="1">Vắng
                                                    mặt</option>
                                                <option value="2">Vắng có
                                                    phép</option>
                                            </select>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <button type="button" class="btn btn-success"
                                id="btn-score">Lưu</button>
                        </div>
                    </form>
                </div>

            </body>
        </div>
        <script src="main.js"></script>
    </body>

</html> <script src="/js/class/attend.js"></script>