    <script>
    document.addEventListener("DOMContentLoaded", function(){
        var mahv;
        var deleteForm = document.forms['delete-student-form'];
        var btnDeleteStudent = document.getElementById('btn-delete-student');
        //Sau khi hiện bảng confirm 
        $('#delete-student-modal').on('shown.bs.modal', function(event){
            var button = $(event.relatedTarget)
            mahv = button.data('mahv')
        })
        btnDeleteStudent.onclick = function(){
            //thêm định tuyến vào cho form
            deleteForm.action = '/student/deleled/' + `?mahv=${mahv}&` + '_method=PUT'
            deleteForm.submit()
        }

    })
</script>
    <script>
  // Xử lý sự kiện nhấn nút "Next"
  document.querySelector('.nextpage').addEventListener('click', function(event) {
    event.preventDefault();
    const nextPage = parseInt(new URLSearchParams(window.location.search).get('page') || 1) + 1;
    window.location.href = `/student/reserve/?page=${nextPage}`;
  });
</script>
    <script>
  // Xử lý sự kiện nhấn nút "BACK"
  document.querySelector('.backpage').addEventListener('click', function(event) {
    event.preventDefault();
    const nextPage = parseInt(new URLSearchParams(window.location.search).get('page') || 1) - 1;
    if(nextPage === 0){
        window.location.href = `/student/reserve/?page=1`;
    }
    else{
    window.location.href = `/student/reserve/?page=${nextPage}`;
    }
  });
</script>
    <script>
    const sex = document.querySelectorAll('.gioitinh')
    sex.forEach((e)=>{
        const name = e.innerText
        if(name === 'nam'){
            e.innerText = 'Nam'
        }
        else{
            e.innerText = 'Nữ'
        }
    })
</script>
    <script>
